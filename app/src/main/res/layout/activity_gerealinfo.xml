<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/llgeneralinfo"
    tools:context="com.example.john.medic.gerealinfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<TextView
    android:id="@+id/tvourprice"
    android:gravity="center"
    android:textSize="20sp"
    android:text="OUR PRICE :"
    android:layout_width="0dp"
    android:layout_weight="4"
    android:layout_height="wrap_content" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:id="@+id/btourcart"
            android:text="add to cart"/>

    </LinearLayout>



  <ListView
      tools:listitem="@layout/list_view_layout"
      android:id="@+id/lvstoredetails"
      android:layout_width="match_parent"
      android:layout_height="match_parent"></ListView>

</LinearLayout>
